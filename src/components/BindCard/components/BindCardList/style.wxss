.bindCardList {
  position: absolute;
  left: 0;
  top: 0;
  height: 100vh;
  width: 100%;
  margin-top: 45px;
}
.bindCardList .bindCardList__con {
  height: 70px;
  padding: 10px;
  box-sizing: border-box;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 0.5px solid #f5f5f5;
}
.bindCardList .bindCardList__con .bindCardList__left .bindCardList__avatar {
  width: 40px;
  height: 40px;
  overflow: hidden;
}
.bindCardList .bindCardList__con .bindCardList__middle {
  display: flex;
  flex-direction: column;
  margin: 0 10px;
  height: 40px;
  justify-content: space-between;
}
.bindCardList .bindCardList__con .bindCardList__middle .bindCardList__middle__top {
  display: flex;
  flex-direction: row;
}
.bindCardList .bindCardList__con .bindCardList__middle .bindCardList__middle__top .bindCardList__middle__icon {
  width: 15px;
  height: 15px;
  overflow: hidden;
  margin: 0 5px;
}
