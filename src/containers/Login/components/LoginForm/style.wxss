.loginForm .loginForm__inputContainer {
  background: #fff;
}
.loginForm .loginForm__inputContainer .loginForm__row {
  padding-left: 15px;
  padding-right: 15px;
  background: url(data:image/png;base64,) repeat-x 0 bottom;
  background-size: auto 1px;
  margin-bottom: 1px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.loginForm .loginForm__inputContainer .loginForm__row .loginForm__mobileLabel {
  display: inline-block;
  width: 60px;
  border-right: 1px solid #e0e0e0;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  color: #333;
  position: relative;
}
.loginForm .loginForm__inputContainer .loginForm__row .loginForm__input {
  border: none;
  height: 40px;
  padding-left: 10px;
  border-bottom: 1px solid #e0e0e0;
  flex: 1;
  line-height: 40px;
  font-size: 15px;
  outline: 0;
  color: #333;
}
.loginForm .loginForm__inputContainer .loginForm__row .loginForm__passwordLabel {
  display: inline-block;
  width: 60px;
  border-right: 1px solid #e0e0e0;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  color: #333;
  position: relative;
}
.loginForm .loginForm__btnContainer {
  margin-top: 12px;
  text-align: center;
  padding: 0 15px;
}
